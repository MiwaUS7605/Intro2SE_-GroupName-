<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/image/banner/sunflower1.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Order Management</h2>
                    <div class="breadcrumb__option">
                        <a href="/home">Home</a>
                        <span>Order Management</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Manage Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>My Orders</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li><a href="/users/manage-order">All</a></li>
                        <li><a href="/users/manage-order?order=1">Collecting</a></li>
                        <li><a href="/users/manage-order?order=2">Pending</a></li>
                        <li><a href="/users/manage-order?order=3">Shipping</a></li>
                        <li><a href="/users/manage-order?order=4">Complete</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            <div class="col-md-12 col-lg-12 col-sm-12">
                <div class="checkout__form">
                    <div class="table-responsive">
                        <table class="table no-wrap">
                            <thead>
                                <tr>
                                    {{!-- <th class="border-top-0">No.</th> --}}
                                    <th class="border-top-0">ID Order</th>
                                    <th class="border-top-0">Status</th>
                                    {{!-- <th class="border-top-0">Date</th> --}}
                                    <th class="border-top-0">Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each orders}}
                                <tr>
                                    {{!-- <td></td> --}}
                                    <td>{{idorder}}</td>
                                    <td class="txt-oflo">{{statusname}}</td>
                                    {{!-- <td><span class="text-success">{{time}}</span></td> --}}
                                    <td>{{totalprice}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Manage Section End -->